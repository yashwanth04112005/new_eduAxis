				<h1>Upload Assignment</h1>
				<form id="uploadForm">
					<div class="mb-3">
						<label for="fileInput" class="form-label">
							Choose a File (It should be named clearly. Include class and
							subject)
						</label>
						<input
							class="form-control"
							type="file"
							id="fileInput"
							name="file"
							accept=".txt,.pdf,.doc,.docx"
							required
						/>
					</div>

					<div class="mb-3">
						<label for="subject" class="form-label"
							>Subject/Topic/Subtopic</label
						>
						<input
							type="text"
							name="subject"
							class="form-control"
							id="subject"
							placeholder="Subject"
							required
						/>
					</div>
					<div class="mb-3">
						<label for="Instructions" class="form-label"
							>Details/Instructions</label
						>
						<textarea
							class="form-control"
							id="instructions"
							rows="3"
							name="Instructions"
							required
						></textarea>
					</div>
					<div class="mb-3">
						<select
							class="form-select"
							aria-label="Default select example"
							name="AsClass"
							id="AsClass"
						>
							<option selected>Select a class</option>
							<% classes.forEach(classItem => { %>
							<option value="<%= classItem.className %>">
								<%= classItem.className %>
							</option>
							<% }); %>
						</select>
					</div>
					<div class="mb-3">
						<label for="deadlineDate"> Set Deadline: </label>

						<input
							type="date"
							name="deadlineDate"
							id="deadlineDate"
							class="form-control"
						/>
					</div>
					<div class="mb-3">
						<label for="deadlineTime" class="form-label">
							Set DeadlineTime:
						</label>
						<input
							type="time"
							class="form-control"
							name="deadlineTime"
							id="deadlineTime"
						/>
					</div>

					<button
						type="button"
						class="btn w-100 btn-primary"
						onclick="uploadFile()"
					>
						Upload
					</button>
				</form>
