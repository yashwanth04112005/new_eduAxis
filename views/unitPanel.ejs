		<!-- MODALS -->

		<div
			class="modal fade"
			id="addAnnouncementModal"
			tabindex="-1"
			role="dialog"
			aria-labelledby="modalTitleId"
			aria-hidden="true"
		>
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<form action="/unit/announcement" method="post">
						<div class="modal-header">
							<h5 class="modal-title" id="modalTitleId">New Announcement</h5>
							<button
								type="button"
								class="btn-close"
								data-bs-dismiss="modal"
								aria-label="Close"
							></button>
						</div>
						<div class="modal-body">
							<div class="container-fluid">
								<div class="form-floating mb-3">
									<input type="hidden" name="unitId" value="<%= Unit._id %>" />
									<input
										type="text"
										class="form-control"
										name="announcementTitle"
										id="announcementTitle"
										placeholder=""
									/>
									<label for="announcementTitle">Title</label>
								</div>
								<div class="form-floating mb-3">
									<input
										type="text"
										class="form-control"
										name="announcementDetails"
										id="announcementDetails"
										placeholder=""
									/>
									<label for="announcementDetails">Details</label>
								</div>
							</div>
						</div>
						<div class="modal-footer">
							<button
								type="button"
								class="btn btn-secondary"
								data-bs-dismiss="modal"
							>
								Close
							</button>
							<button type="submit" class="btn btn-primary">Save</button>
						</div>
					</form>
				</div>
			</div>
		</div>

		<script>
			var addAnnouncementModal = document.getElementById(
				"addAnnouncementModal"
			);

			addAnnouncementModal.addEventListener("show.bs.modal", function (event) {
				// Button that triggered the modal
				let button = event.relatedTarget;
				// Extract info from data-bs-* attributes
				let recipient = button.getAttribute("data-bs-whatever");

				// Use above variables to manipulate the DOM
			});
		</script>
		<!-- Modal -->
		<div
			class="modal fade"
			id="addAssignmentModal"
			tabindex="-1"
			role="dialog"
			aria-labelledby="modalTitleId"
			aria-hidden="true"
		>
			<div class="modal-dialog" role="document">
				<div class="modal-content assignment-upload-modal">
					<form
						action="/upload"
						enctype="multipart/form-data"
						method="post"
						id="uploadForm"
					>
						<div class="modal-header">
							<h5 class="modal-title" id="modalTitleId">Upload Assignment</h5>
							<button
								type="button"
								class="btn-close"
								data-bs-dismiss="modal"
								aria-label="Close"
							></button>
						</div>
						<div class="modal-body">
							<div class="container-fluid">
								<div class="mb-3">
									<label for="fileInput" class="form-label">
										Choose a File
									</label>
									<input
										class="form-control"
										type="file"
										id="fileInput"
										name="file"
										accept=".txt,.pdf,.doc,.docx"
										required
									/>
									<div class="form-text">Accepted: .txt, .pdf, .doc, .docx</div>
									<input
										type="hidden"
										name="unitId"
										value="<%= Unit._id %>"
										id="unitIdInput"
									/>
								</div>

								<div class="mb-3">
									<label for="subject" class="form-label"
										>Subject/Topic/Subtopic</label
									>
									<input
										type="text"
										name="subject"
										class="form-control"
										id="subject"
										placeholder="Subject"
										required
									/>
								</div>
								<div class="mb-3">
									<label for="Instructions" class="form-label"
										>Details/Instructions</label
									>
									<textarea
										class="form-control"
										id="instructions"
										rows="3"
										name="Instructions"
										required
									></textarea>
								</div>
								<!-- <div class="mb-3">
									<select
										class="form-select"
										aria-label="Default select example"
										name="AsClass"
										id="AsClass"
									>
										<option selected>Select a class</option>

										<option value="classItem.className">
											classItem.className
										</option>
									</select>
								</div> -->
								<div class="mb-3">
									<label for="deadlineDate"> Set Deadline: </label>

									<input
										type="date"
										name="deadlineDate"
										id="deadlineDate"
										class="form-control"
									/>
								</div>
								<div class="mb-3">
									<label for="deadlineTime" class="form-label">
										Set DeadlineTime:
									</label>
									<input
										type="time"
										class="form-control"
										name="deadlineTime"
										id="deadlineTime"
									/>
								</div>
							</div>
						</div>
						<div class="modal-footer">
							<button
								type="button"
								class="btn btn-secondary"
								data-bs-dismiss="modal"
							>
								Close
							</button>
							<button
								type="button"
								onclick="uploadFile()"
								class="btn btn-primary"
							>
								Save
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>

		<!-- /MODALS -->

