            margin-top: 15px;
        }
        .payment-options .payment-option {
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            cursor: pointer;
        }
